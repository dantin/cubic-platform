<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.dantin.cubic.user.repository.AuthorityMapper">
  <sql id="BASE_TABLE">
        "t_authorities"
    </sql>

  <sql id="BASE_COLUMNS">
        "username", "authority"
    </sql>

  <resultMap id="authorityMap" type="com.github.dantin.cubic.user.entity.model.Authority">
    <result property="username" column="username" javaType="java.lang.String" jdbcType="VARCHAR"/>
    <result property="authority" column="authority" javaType="java.lang.String" jdbcType="VARCHAR"/>
  </resultMap>

  <select id="findByUsername" resultMap="authorityMap">
    SELECT
    <include refid="BASE_COLUMNS"/>
    FROM
    <include refid="BASE_TABLE"/>
    WHERE
    "username" = #{username}
    LIMIT 1
  </select>

  <insert id="save" parameterType="com.github.dantin.cubic.user.entity.model.Authority">
    INSERT INTO
    <include refid="BASE_TABLE"/>
    <trim prefix="(" suffix=")" suffixOverrides=", ">
    "username",
    "authority",
    </trim>
    VALUES
    <trim prefix="(" suffix=")" suffixOverrides=", ">
    #{username},
    #{authority},
    </trim>
  </insert>

</mapper>